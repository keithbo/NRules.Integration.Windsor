<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net40</TargetFrameworks>
    <Platforms>AnyCPU</Platforms>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSource>True</IncludeSource>
    <IncludeSymbols>True</IncludeSymbols>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>
  <PropertyGroup>
    <Title>NRules.Integration.Windsor</Title>
    <Description>Integration support for Castle Windsor in to NRules.</Description>
    <Product>NRules.Integration.Windsor</Product>
    <Company />
    <Copyright>Copyright © 2016</Copyright>
    <Authors>Keith Bosacker</Authors>
    <VersionPrefix>1.0.0</VersionPrefix>
    <PackageLicenseUrl>https://github.com/keithbo/NRules.Integration.Windsor/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/keithbo/NRules.Integration.Windsor</PackageProjectUrl>
    <PackageTags>NRules Castle Windsor Integration</PackageTags>
    <AssemblyOriginatorKeyFile>.\SignKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net40'">
    <DefineConstants>NET40;NETFULL</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Windsor">
      <Version>3.3.0</Version>
    </PackageReference>
    <PackageReference Include="NRules">
      <Version>0.4.3</Version>
    </PackageReference>
  </ItemGroup>

</Project>
